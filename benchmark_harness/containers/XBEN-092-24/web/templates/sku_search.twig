<!DOCTYPE html>
<html>
<head>
    <title>Search SKU</title>
</head>
<body>
    <h1>Search SKU</h1>
    <form method="post" action="sku_search.php">
        <input type="text" name="search" placeholder="Enter SKU or Name">
        <button type="submit">Search</button>
    </form>
    {% if results %}
        <h2>Search Results</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for result in results %}
                    <tr>
                        <td>{{ result.id }}</td>
                        <td>{{ result.sku }}</td>
                        <td>{{ result.name }}</td>
                        <td>{{ result.description }}</td>
                        <td><a href="sku_product_detail.php?id={{ result.id }}">Details</a></td>
                        <td>
                            <form method="post" action="sku_delete.php" style="display:inline;">
                                <input type="hidden" name="id" value="{{ result.id }}">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this SKU?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <p><a href="index.php">Back</a></p>
</body>
</html>
